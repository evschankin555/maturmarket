        <!-- Info :: Start-->
        <div class="info is-hidden is-lg-visible">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xl-12">
                <div class="row justify-content-center">
				{{ title }}
		    {% for advantage1 in advantages %} 
				{% for advantage in advantage1 %} 
                  <div class="col-sm-3">
					{% if (advantage['link']) %} 
						<a class="info__item" href="{{ advantage['link'] }}">
							{% if (icon_type == 'html') %} 
								{{ advantage['html'] }}
							{% else %} 
								<img {{ lazyload ? 'src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" data-src' : 'src' }}="{{ advantage['image'] }}" alt="{{ advantage['title'] }}">
							{% endif %} 
						{{ advantage['title'] }}
						</a>
						{% else %} 
						<div class="info__item">
							{% if (icon_type == 'html') %} 
								{{ advantage['html'] }}
							{% else %} 
								<img {{ lazyload ? 'src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" data-src' : 'src' }}="{{ advantage['image'] }}" alt="{{ advantage['title'] }}">
							{% endif %} 
						{{ advantage['title'] }}
						</div>
					{% endif %} 
                  </div>
				{% endfor %} 
  		    {% endfor %} 
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Info :: End-->