	  <script type="text/javascript">
		let form = document.querySelector('.basket__container > form');
		form.onsubmit = function(evt) {
			evt.preventDefault();
			let quantity_old;
			let quantity_new;
			let key;

			$('.basket__container > form').find('input').each(function() {
			quantity_new = $(this).val();
			quantity_old = $(this).attr('value');
			key = $(this).attr('name').match(/\d+/g)[0];

			var difference_in_quantity = quantity_old - quantity_new;

			if (difference_in_quantity < 0) {
				sendDataForEcommerceYandexMetrica({
					id: key,
					event: 'add',
					id_type: 'key',
					quantity: Math.abs(difference_in_quantity),
					async: false
				});
				setTimeout(function() {
					form.submit();
				}, 1000);
			} else if (difference_in_quantity > 0) {
				sendDataForEcommerceYandexMetrica({
					id: key,
					event: 'remove',
					id_type: 'key',
					quantity: Math.abs(difference_in_quantity),
					async: false
				});
				setTimeout(function() {
					form.submit();
				}, 1000);
			}
			});
		};
		</script>
