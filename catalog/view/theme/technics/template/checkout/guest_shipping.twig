<div class="row">
					{% for fieldName in allCustomFields %} 
						{% set fieldNameT = "entry_" ~ fieldName  ~ '_show' %}
						{% set fieldNameR = "entry_" ~ fieldName  ~ '_required' %}
						{% set fieldNameN = "entry_" ~ fieldName  %}
						{% set fieldNameE = "error_" ~ fieldName  %}
						{% set fieldNameV = fieldName  %}
						<div {{ not attribute(_context, fieldNameT)  ? 'style="display:none"' : '' }} class="ui-group form-group col-lg-6">
									<label class="ui-label ui-label--uppercase {{ attribute(_context, fieldNameR)  ? 'required' : ''  }}">{{ attribute(_context, fieldNameN) }}</label>
									<div class="ui-field">
										{% if (fieldName == 'country') %} 
											<select name="country_id" id="input-shipping-country" class="ui-select">
												<option value="">{{ text_select }}</option>
												{% for country in countries %} 
												{% if (country['country_id'] == country_id) %} 
												<option value="{{ country['country_id'] }}" selected="selected">{{ country['name'] }}</option>
												{% else %} 
												<option value="{{ country['country_id'] }}">{{ country['name'] }}</option>
												{% endif %} 
												{% endfor %} 
											</select>
										{% elseif (fieldName == 'zone') %}
												<select name="zone_id" id="input-shipping-zone" class="ui-select"></select>
										{% else %}
											<input class="ui-input" type="text" name="{{ fieldName }}" value="{{ attribute(_context, fieldNameV) }}" placeholder="{{ attribute(_context, fieldNameN) }}" id="input-shipping-{{ (fieldName)|replace({'_': '-'}) }}">
										{% endif %}
										{% if attribute(_context, fieldNameE) %} 
											<svg class="icon-error"><use xlink:href="catalog/view/theme/technics/sprites/sprite.svg#icon-error"></use></svg><span class="error ui-error">{{ attribute(_context, fieldNameE) }}</span>
										{% endif %}	
									</div>
						</div>	
					{% endfor %} 

					{% for custom_field in custom_fields %} 
					{% if (custom_field['location'] == 'address') %} 
					{% if (custom_field['type'] == 'select') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<select name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="ui-select">
										<option value="">{{ text_select }}</option>
										{% for custom_field_value in custom_field['custom_field_value'] %} 
										{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
										<option value="{{ custom_field_value['custom_field_value_id'] }}" selected="selected">{{ custom_field_value['name'] }}</option>
										{% else %} 
										<option value="{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</option>
										{% endif %} 
										{% endfor %}						
									</select>
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'radio') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
							<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
								{% for custom_field_value in custom_field['custom_field_value'] %} 
									{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
										<span class="ui-check__radio">
										</span>
										{{ custom_field_value['name'] }}
									</label>
									{% else %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}">
										<span class="ui-check__radio">
										</span>
										{{ custom_field_value['name'] }}
									</label>								
									{% endif %} 
								{% endfor %} 
								</div>						
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'checkbox') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
								{% for custom_field_value in custom_field['custom_field_value'] %} 
									{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}][]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
										<span class="ui-check__checkbox">
										  <svg class="icon-check">
											<use xlink:href="catalog/view/theme/technics/sprites/sprite.svg#icon-check"></use>
										  </svg>
										</span>
										{{ custom_field_value['name'] }}
									</label>
									{% else %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}][]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}">
										<span class="ui-check__checkbox">
										  <svg class="icon-check">
											<use xlink:href="catalog/view/theme/technics/sprites/sprite.svg#icon-check"></use>
										  </svg>
										</span>
										{{ custom_field_value['name'] }}
									</label>								
									{% endif %} 
								{% endfor %} 	
								</div>						
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'text') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<input class="ui-input" type="text" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'textarea') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }} ">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<textarea class="ui-textarea" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" >{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}</textarea>
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'file') %} 
					<div class="ui-group form-group col-lg-6 custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<button type="button" id="button-shipping-custom-field{{ custom_field.custom_field_id }}" data-loading-text="{{ text_loading }}" class="btn">{{ button_upload }}</button>
									<input type="hidden" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : '' }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'date') %} 
					<div class="ui-group form-group col-lg-6 custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<input class="ui-input date" type="text" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ date_format }}" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".date">
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'time') %} 
					<div class="ui-group form-group col-lg-6 custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<input class="ui-input time" type="text" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ time_format }}" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".time">
								</div>
					</div>					
					{% endif %} 
					{% if (custom_field['type'] == 'datetime') %} 
					<div class="ui-group form-group col-lg-6 custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label ui-label--uppercase{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field">
									<input class="ui-input datetime" type="text" name="custom_field[{{ custom_field['location'] }}][{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ datetime_format }}" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".datetime">
								</div>
					</div>					
					{% endif %} 
					{% endif %} 
					{% endfor %}					
</div>	

				<div class="personal__action">
					<a href="#" class="btn btn--transparent" id="button-guest-shipping-b">{{ button_back }}</a>
					<button type="button" class="btn btn--blue" data-loading-text="{{ text_loading }}" id="button-guest-shipping">{{ button_continue }}</button>
				</div>
	
<script>
