{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-cod" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-cod" class="form-horizontal">

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-paymentname">{{ entry_paymentname }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_paymentname" value="{{ payment_dolyame_paymentname }}" placeholder="{{ entry_paymentname }}" id="input-paymentname" class="form-control" />
              {% if error_paymentname %}
              <div class="text-danger">{{ error_paymentname }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-login">{{ entry_login }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_login" value="{{ payment_dolyame_login }}" placeholder="{{ entry_login }}" id="input-login" class="form-control" />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-password">{{ entry_password }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_password" value="{{ payment_dolyame_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-cert_path"><span data-toggle="tooltip" title="{{ help_cert_path }}">{{ entry_cert_path }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_cert_path" value="{{ payment_dolyame_cert_path }}" placeholder="{{ entry_cert_path }}" id="input-cert_path" class="form-control" />
              {% if error_cert_path %}
              <div class="text-danger">{{ error_cert_path }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key_path"><span data-toggle="tooltip" title="{{ help_key_path }}">{{ entry_key_path }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_key_path" value="{{ payment_dolyame_key_path }}" placeholder="{{ entry_key_path }}" id="input-key_path" class="form-control" />
              {% if error_key_path %}
              <div class="text-danger">{{ error_key_path }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-prefix">{{ entry_prefix }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_prefix" value="{{ payment_dolyame_prefix }}" placeholder="{{ entry_prefix }}" id="input-prefix" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dolyame_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dolyame_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-refund-status">{{ entry_order_refund_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dolyame_order_refund_status_id" id="input-order-refund-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dolyame_order_refund_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_dolyame_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_dolyame_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dolyame_status" id="input-status" class="form-control">
                {% if payment_dolyame_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dolyame_sort_order" value="{{ payment_dolyame_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}